<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.view.activitys.VistaDetalleBarActivity"
    android:background="@color/blanco">


    <TextView
        android:id="@+id/nombreNegocio"
        android:layout_width="0dp"
        android:layout_height="46dp"
        android:background="#000000"
        android:gravity="center"
        android:maxLines="1"
        android:paddingRight="@dimen/dp_25"
        android:text="Pub ejemplo"
        android:textColor="@color/base"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/lyt_detalle_flecha"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/lyt_detalle_flecha"
        android:layout_width="wrap_content"
        android:layout_height="46dp"
        android:background="#000000"
        android:paddingLeft="@dimen/dp_3"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imv_flecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="volverHome"
            app:srcCompat="@drawable/outline_arrow_back_24"
            tools:ignore="VectorDrawableCompat" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imagenDetalle"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/rolling"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nombreNegocio" />

    <TextView
        android:id="@+id/anuncioNegocio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:background="@drawable/anuncios"
        android:gravity="center"
        android:text="Hoy 2x1 en Ginebras"
        android:textColor="@color/base"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/imagenDetalle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />



    <GridView
        android:id="@+id/grid_usuarios"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imagenDetalle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:numColumns="4"/>


</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/base"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_foto_usuario"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_100"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nick"
        android:layout_width="@dimen/dp_100"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text=""
        android:textColor="@color/acen"
        app:layout_constraintEnd_toEndOf="@+id/img_foto_usuario"
        app:layout_constraintStart_toStartOf="@+id/img_foto_usuario"
        app:layout_constraintTop_toBottomOf="@+id/img_foto_usuario" />

</androidx.constraintlayout.widget.ConstraintLayout>